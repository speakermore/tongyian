						{% endfor %}
						</div>
					</div>
				</article>
			</div>
   </div>
   {% for config in themeConfig.blocks.left|default([]) %}
      {% set code = config.code %}
      {% set category = config.categoryId|default(0) ? data('Category', {categoryId: config.categoryId})  : null %}
