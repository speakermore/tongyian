{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}
{% set script_controller='students/add-student' %}
{% block title %}学生报名学校添加{% endblock %}
{% block heading %}学生报名学校添加{% endblock %}
{% block body %}

<form id="add-student-form" class="form-horizontal" method="post">

    <div class="form-group">
        <label class="col-md-2 control-label">添加学生报名信息</label>
        <div class="col-md-7 controls radios">
            <div class="help-block" style="display:none;"></div>
</div>
</div>
{{ web_macro.flash_messages() }} {#中文名称#}
<div class="form-group">
    <label class="col-md-2 control-label">{{'姓名'|trans}}</label>
    <div class="col-md-7 controls radios">
        <input type="text" id="student_name" name="student[name]" class="form-control" value="" />
        <div class="help-block" style="display:none;"></div>
</div>
</div>

{#民族#}
<div class="form-group form-forIam-group form-notStudent-group">
    <label class="col-md-2 control-label">{{'民族'|trans}}</label>
    <div class="col-md-7 controls">
        <input type="text" id="student_nation" name="student[nation]" class="form-control" value="" />
        <div class="help-block" style="display:none;"></div>
</div>
</div>

{#生日#}
<div class="form-group form-forIam-group form-notStudent-group">
    <label class="col-md-2 control-label">{{'生日'|trans}}</label>
    <div class="col-md-7 controls">
        <input type="text" id="datetimepicker" name="student[birthday]" class="date" value="" data-date-format="yyyy-mm-dd" />
        {{ '格式为yyyy-mm-dd' }}
        <div class="help-block" style="display:none;"></div>
</div>
</div>

{#身高#}
<div class="form-group form-forIam-group form-notStudent-group">
