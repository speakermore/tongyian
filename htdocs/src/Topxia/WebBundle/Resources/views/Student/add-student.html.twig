<input type="hidden" id="schools_id" name="schools[id]" value="{{ school.id|default('') }}">
<input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
</form>
<button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{'关闭'|trans}}</button> {% endblock %} 