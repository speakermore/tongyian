{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}{{'学生报名详细信息'|trans}}{% endblock %}

{% block body %}

<table class="table table-striped table-condenseda table-bordered">
  <tr>
    <th width="25%">{{'学生姓名'|trans}}</th>
    <td width="75%">
      {{ student.name|default('') }}
    </td>
  </tr>

  <tr>
    <th>{{'民族'}}</th>
    <td>
      {{ student.nation|default('') }}
    </td>
  </tr>
  <tr>
      <th>{{'联系方式'|trans}}</th>
      <td>
        {{ student.phone|default('') }}
      </td>
  </tr>   
  <tr>
    <th>{{'学校类别'|trans}}</th>
    <td>
        {{ student.type|default('') }}
    </td>
  </tr>

  <tr>
    <th>{{'生日'|trans}}</th>
    <td>
      {{ student.birthday|date('Y-m-d ') }}
    </td>
  </tr>

  <tr>
    <th>{{'报名时间'|trans}}</th>
    <td> 
      {{ student.createTime|date('Y-m-d ') }}
     </td>
  </tr>
  
</table>

{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">{{ '关闭'|trans }}</button>
{% endblock %}