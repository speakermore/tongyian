{% extends 'TopxiaAdminBundle::new-layout.html.twig' %}

{% set menu = 'newadmin_enroll' %}

{% set script_controller = 'teacher/teacher-list' %}

{% block main %}
<form id="school-searchSt-form" class="form-inline well well-sm" action="" method="get" novalidate>
  <div class="form-group">
    <input type="text" name="nickname" class="form-control" value="" placeholder="{{'姓名'|trans}}">
  </div>
  <button class="btn btn-primary">{{'搜索'|trans}}</button>
</form>
<table id="student-enrollstat-table" class="table table-striped table-hover" data-search-form="#school-searchSt-form">
  <thead>
    <tr>
      <th>{{'姓名'|trans}}</th>
      <th>{{'联系方式'|trans}}</th>
      <th>{{'身份证号'|trans}}</th>
      <th>{{'所报课程'|trans}}</th>
      <th>{{'报名时间'|trans}}</th>
    </tr>
  </thead>
  <tbody>
    {% if students %}
      {% for student in students %}
        <tr>
          <td>{{ student.name|default('') }}</td>
          <td>{{ student.phone|default('') }}</td>
          <td>{{ student.IDcards|default('') }}</td>
          <td>{{ student.reportedCourse|default('') }}</td>
          <td>{{ student.createTime is empty ? "" : student.createTime|date("Y-m-d ") }}</td>
        </tr>
      {% endfor %}
    {% endif %}
  </tbody>
</table>
{% endblock %}